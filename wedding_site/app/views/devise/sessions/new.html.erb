<script>
  $("#login").hide();
</script>
<div class="intro-header">
  <div class="container">

      <div class="row">
          <div class="col-lg-12">
              <div class="loginmodal-container">
                <%= devise_error_messages! %>
                <% flash.each do |key, value| %>
                   <div class="flash <%= key %>"><%= value %></div>
                <% end %>
                <%= form_for(resource, 
                      :as => resource_name,
                      :url => session_path(resource_name),
                      :html => {:id => "sign_in_user"},
                      :format => :json) do |f| %>

                  <div class="field">
                    <p><%= f.label :username %><br />
                    <%= f.text_field :login %></p>
                  </div>  

                  <div class="field">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, autocomplete: "off" %>
                  </div>

                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>

                  <div class="actions">
                    <input class="login loginmodal-submit" type="submit" name="commit" value="Log in" data-disable-with="Log in" />
                  </div>
                <% end %>
              </div>
          </div>
      </div>

  </div>
</div>

