#accordion {
  text-align: center;
  padding: 50px 30px;
  background: url(<%= asset_path 'venue.jpg' %>)
}

.panel-heading .panel-title {
  font-size: 20px;
  margin:5px;
}

.row .panel-default {
  padding: 0px 0px;
  height: 140px;
  width: 94px;
  margin: 5px;
}

.row .panel-body {
  padding: 0px 0px;
  margin: 10px;
}

#accordion .row {
  vertical-align: middle;
  padding: 0px 0px;
  max-width: 832px;
  margin: auto;
}

div .people-name {
  font-size: 10px;
  font-family: serif;
  height: 30px;
}

.panel-btn {
   vertical-align: baseline;
}

body,
h1,
h2,
h3,
h4,
h5,
h6 {
    font-family: "Lato","Helvetica Neue",Helvetica,Arial,sans-serif;
    font-weight: 400;
}